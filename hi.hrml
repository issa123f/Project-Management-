    <link rel="stylesheet" href="/mn_proj/another_file/Task/taskDetails.css">

</head>
<body>
    <nav>
        <div id="main-5bt">
            <a href="/mn_proj/another_file/main.html"><button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/home.svg" /></button></a>
            <a href="/mn_proj/another_file/calender_page/calendar.html"><button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/calendar.svg" /></button></a>
            <a href="/mn_proj/Marketreashers/market.html"><button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/image-1@2x.png" /></button></a>
            <a href="/mn_proj/another_file/Report/report.html"><button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/image@2x.png" /></button></a>
            <a href="/mn_proj/another_file/Task/task.html"><button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/file-plus.svg" /></button></a>
        </div>
        <div id="main-2bt">
            <button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/settings.svg" /></button>
            <button class="bar"><img class="bar-cn" src="https://c.animaapp.com/CWefXrO2/img/log-out.svg" /></button>
        </div>
    </nav>
    <main>
        <div id="taskDetails">
            <!-- Task details will be dynamically added here -->
        </div>
    </main>
    <script src="taskDetails.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const taskId = urlParams.get('taskId');

            if (taskId) {
                try {
                    const response = await fetch(`/api/get-task/${taskId}`);
                    const taskDetails = await response.json();
                    displayTaskFile(taskDetails);
                } catch (error) {
                    console.error("Error fetching task details:", error);
                }
            }

            function displayTaskFile(taskDetails) {
                const taskContainer = document.getElementById('taskDetails');
                taskContainer.innerHTML = '';

                const fileUrl = taskDetails.file; // Path to the file (e.g., a PDF)

                // Create an iframe to display the file (if it's a PDF)
                const iframe = document.createElement('iframe');
                iframe.src = fileUrl;
                iframe.width = '100%';
                iframe.height = '700px';
                taskContainer.appendChild(iframe);

   
                goTaskButton.addEventListener('click', () => {
                window.location.href = `/mn_proj/another_file/Task/taskDetails.html?taskId=${taskId}`;
                });

                taskContainer.appendChild(goTaskButton);
            }
        });
    </script>
</body>
</html>
